@inject SignInManager<ApplicationUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<div class="medieval-nav">
    <ul class="nav flex-column">
        <li class="nav-item">
            <a class="nav-link medieval-nav-link @ManageNavPages.IndexNavClass(ViewContext)" id="profile" asp-page="./Index">
                <i class="bi bi-person-circle"></i> ПРОФИЛ
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link medieval-nav-link @ManageNavPages.EmailNavClass(ViewContext)" id="email" asp-page="./Email">
                <i class="bi bi-envelope"></i> ИМЕЙЛ
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link medieval-nav-link @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword">
                <i class="bi bi-key"></i> ПАРОЛА
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link medieval-nav-link @ManageNavPages.PersonalDataNavClass(ViewContext)" id="personal-data" asp-page="./PersonalData">
                <i class="bi bi-shield"></i> ЛИЧНИ ДАННИ
            </a>
        </li>
    </ul>
</div>

<style>
    .medieval-nav {
        background: rgba(139, 69, 19, 0.1);
        border: 2px solid #8B4513;
        border-radius: 8px;
        padding: 1rem;
        margin-bottom: 1rem;
    }

    .medieval-nav-link {
        color: #654321 !important;
        font-family: 'Cinzel', serif;
        font-weight: 600;
        padding: 0.75rem 1rem;
        border-radius: 4px;
        transition: all 0.3s ease;
        text-transform: uppercase;
    }

    .medieval-nav-link:hover {
        background: rgba(139, 69, 19, 0.1);
        color: #8B4513 !important;
        transform: translateX(5px);
    }

    .medieval-nav-link.active {
        background: linear-gradient(45deg, #8B4513, #A0522D);
        color: #FFD700 !important;
        box-shadow: 0 2px 5px rgba(139, 69, 19, 0.3);
    }

    .medieval-nav-link i {
        margin-right: 0.5rem;
    }
</style>
