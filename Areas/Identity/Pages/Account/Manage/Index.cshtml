@page
@model IndexModel
@{
    ViewData["Title"] = "Профил";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card medieval-card">
            <div class="card-header medieval-header">
                <h2 class="card-title text-center mb-0">
                    <i class="bi bi-person-circle"></i> ПРОФИЛ
                </h2>
            </div>
            <div class="card-body medieval-body">
                <form id="profile-form" method="post" class="needs-validation" novalidate>
                    <div class="mb-3">
                        <label class="form-label medieval-label">ИМЕЙЛ АДРЕС</label>
                        <div class="input-group">
                            <span class="input-group-text medieval-input-icon"><i class="bi bi-envelope"></i></span>
                            <input type="email" name="Username" class="form-control medieval-input" value="@Model.Username" disabled />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label medieval-label">ИМЕ</label>
                        <div class="input-group">
                            <span class="input-group-text medieval-input-icon"><i class="bi bi-person"></i></span>
                            <input type="text" name="Input.FirstName" class="form-control medieval-input" 
                                   value="@Model.Input.FirstName" required
                                   minlength="2" maxlength="50"
                                   title="Името трябва да е между 2 и 50 символа" />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label medieval-label">ФАМИЛИЯ</label>
                        <div class="input-group">
                            <span class="input-group-text medieval-input-icon"><i class="bi bi-person"></i></span>
                            <input type="text" name="Input.LastName" class="form-control medieval-input" 
                                   value="@Model.Input.LastName" required
                                   minlength="2" maxlength="50"
                                   title="Фамилията трябва да е между 2 и 50 символа" />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label medieval-label">ТЕЛЕФОНЕН НОМЕР</label>
                        <div class="input-group">
                            <span class="input-group-text medieval-input-icon"><i class="bi bi-telephone"></i></span>
                            <input type="tel" name="Input.PhoneNumber" class="form-control medieval-input" 
                                   value="@Model.Input.PhoneNumber"
                                   pattern="^[+]?[\d\s-()]{7,}$"
                                   title="Моля, въведете валиден телефонен номер" />
                        </div>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn medieval-button">
                            <i class="bi bi-save"></i> ЗАПАЗИ ПРОМЕНИТЕ
                        </button>
                    </div>
                </form>
            </div>
        </div>

        @if (Model.StatusMessage != null)
        {
            <div class="alert alert-success medieval-alert alert-dismissible fade show mt-3" role="alert">
                <i class="bi bi-check-circle"></i> @Model.StatusMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@section Styles {
    <style>
        .medieval-card {
            background: url('data:image/png;base64,');
            border: 3px solid #8B4513;
            box-shadow: 0 0 15px rgba(139, 69, 19, 0.3);
            border-radius: 8px;
            position: relative;
            overflow: hidden;
        }

        .medieval-header {
            background: linear-gradient(45deg, #8B4513, #A0522D);
            border-bottom: 2px solid #654321;
            padding: 1rem;
        }

        .medieval-header h2 {
            color: #FFD700;
            font-family: 'Cinzel', serif;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
            font-size: 1.5rem;
        }

        .medieval-body {
            padding: 1.5rem;
            background-color: rgba(255, 248, 220, 0.95);
        }

        .medieval-label {
            color: #654321;
            font-weight: 600;
            font-family: 'Cinzel', serif;
            text-transform: uppercase;
        }

        .medieval-input {
            border: 2px solid #8B4513;
            background-color: #FFF8DC;
            padding: 0.75rem;
            color: #654321;
        }

        .medieval-input:focus {
            border-color: #DAA520;
            box-shadow: 0 0 0 0.2rem rgba(218, 165, 32, 0.25);
        }

        .medieval-input:disabled {
            background-color: #E8E8E8;
            cursor: not-allowed;
        }

        .medieval-input-icon {
            background-color: #8B4513;
            border: 2px solid #8B4513;
            color: #FFD700;
        }

        .medieval-button {
            background: linear-gradient(45deg, #8B4513, #A0522D);
            border: 2px solid #654321;
            color: #FFD700;
            font-family: 'Cinzel', serif;
            text-transform: uppercase;
            letter-spacing: 1px;
            padding: 1rem 2rem;
            transition: all 0.3s ease;
            width: 100%;
        }

        .medieval-button:hover {
            background: linear-gradient(45deg, #A0522D, #8B4513);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(139, 69, 19, 0.4);
        }

        .medieval-alert {
            background-color: #FFF8DC;
            border: 2px solid #8B4513;
            color: #654321;
        }
    </style>
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;600;700&display=swap" rel="stylesheet">
}
