@page
@model RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}

<div class="d-flex align-items-center justify-content-center min-vh-100">
    <div class="col-md-6">
        <div class="card medieval-card">
            <div class="card-header medieval-header">
                <h2 class="card-title text-center mb-0">
                    <i class="bi bi-shield-plus"></i> Регистрация
                </h2>
            </div>
            <div class="card-body medieval-body">
                <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Input.FirstName" class="form-label medieval-label">Име</label>
                        <div class="input-group">
                            <span class="input-group-text medieval-input-icon"><i class="bi bi-person"></i></span>
                            <input asp-for="Input.FirstName" class="form-control medieval-input" required
                                   placeholder="Въведете вашето име" />
                        </div>
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.LastName" class="form-label medieval-label">Фамилия</label>
                        <div class="input-group">
                            <span class="input-group-text medieval-input-icon"><i class="bi bi-person"></i></span>
                            <input asp-for="Input.LastName" class="form-control medieval-input" required
                                   placeholder="Въведете вашата фамилия" />
                        </div>
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label medieval-label">Имейл адрес</label>
                        <div class="input-group">
                            <span class="input-group-text medieval-input-icon"><i class="bi bi-envelope"></i></span>
                            <input asp-for="Input.Email" class="form-control medieval-input" type="email" required
                                   placeholder="име@пример.com" />
                        </div>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Password" class="form-label medieval-label">Парола</label>
                        <div class="input-group">
                            <span class="input-group-text medieval-input-icon"><i class="bi bi-key"></i></span>
                            <input asp-for="Input.Password" class="form-control medieval-input" type="password" required
                                   placeholder="Създайте силна парола" />
                            <button class="btn medieval-button-secondary" type="button" onclick="togglePassword('Input_Password')">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.ConfirmPassword" class="form-label medieval-label">Потвърдете паролата</label>
                        <div class="input-group">
                            <span class="input-group-text medieval-input-icon"><i class="bi bi-key-fill"></i></span>
                            <input asp-for="Input.ConfirmPassword" class="form-control medieval-input" type="password" required
                                   placeholder="Въведете паролата отново" />
                            <button class="btn medieval-button-secondary" type="button" onclick="togglePassword('Input_ConfirmPassword')">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary medieval-button">
                            <i class="bi bi-shield-plus"></i> Регистрация
                        </button>
                    </div>

                    <hr class="medieval-divider my-3" />

                    <div class="text-center">
                        <p class="mb-0">
                            Вече имате акаунт? 
                            <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="medieval-link">
                                <i class="bi bi-shield-check"></i> Вход
                            </a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function togglePassword(inputId) {
            const input = document.getElementById(inputId);
            const icon = event.currentTarget.querySelector('i');
            
            if (input.type === "password") {
                input.type = "text";
                icon.classList.remove("bi-eye");
                icon.classList.add("bi-eye-slash");
            } else {
                input.type = "password";
                icon.classList.remove("bi-eye-slash");
                icon.classList.add("bi-eye");
            }
        }
    </script>
}

@section Styles {
    <style>
        .medieval-card {
            background: url('data:image/png;base64,');
            border: 3px solid #8B4513;
            box-shadow: 0 0 15px rgba(139, 69, 19, 0.3);
            border-radius: 8px;
            position: relative;
            overflow: hidden;
        }

        .medieval-header {
            background: linear-gradient(45deg, #8B4513, #A0522D);
            border-bottom: 2px solid #654321;
            padding: 1rem;
        }

        .medieval-header h2 {
            color: #FFD700;
            font-family: 'Cinzel', serif;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
            font-size: 1.5rem;
        }

        .medieval-body {
            padding: 1.5rem;
            background-color: rgba(255, 248, 220, 0.95);
        }

        .medieval-label {
            color: #654321;
            font-weight: 600;
            font-family: 'Cinzel', serif;
        }

        .medieval-input {
            border: 2px solid #8B4513;
            background-color: #FFF8DC;
            padding: 0.75rem;
            color: #654321;
        }

        .medieval-input:focus {
            border-color: #DAA520;
            box-shadow: 0 0 0 0.2rem rgba(218, 165, 32, 0.25);
        }

        .medieval-input-icon {
            background-color: #8B4513;
            border: 2px solid #8B4513;
            color: #FFD700;
        }

        .medieval-button {
            background: linear-gradient(45deg, #8B4513, #A0522D);
            border: 2px solid #654321;
            color: #FFD700;
            font-family: 'Cinzel', serif;
            text-transform: uppercase;
            letter-spacing: 1px;
            padding: 1rem 2rem;
            transition: all 0.3s ease;
        }

        .medieval-button:hover {
            background: linear-gradient(45deg, #A0522D, #8B4513);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(139, 69, 19, 0.4);
        }

        .medieval-divider {
            border-top: 2px solid #8B4513;
            position: relative;
        }

        .medieval-divider::before {
            content: "⚔️";
            position: absolute;
            top: -12px;
            left: 50%;
            transform: translateX(-50%);
            background: #FFF8DC;
            padding: 0 10px;
        }

        .medieval-link {
            color: #8B4513;
            text-decoration: none;
            transition: all 0.3s ease;
            font-family: 'Cinzel', serif;
        }

        .medieval-link:hover {
            color: #DAA520;
            text-decoration: underline;
        }

        .min-vh-100 {
            min-height: calc(100vh - 200px) !important;
        }

        .medieval-button-secondary {
            background: #8B4513;
            border: 2px solid #654321;
            color: #FFD700;
            padding: 0.75rem;
            transition: all 0.3s ease;
        }

        .medieval-button-secondary:hover {
            background: #A0522D;
            color: #FFD700;
        }
    </style>
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;600;700&display=swap" rel="stylesheet">
}
